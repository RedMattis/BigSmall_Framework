<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_Pants" or defName="Apparel_BasicShirt" or defName="Apparel_Parka" or defName="Apparel_KidParka"]/apparel/tags</xpath>
    <value>
      <li>BS_MedievalBasic</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="Apparel_KidParka" or defName="Apparel_Parka" or defName="Apparel_KidParka" or defName="Apparel_Duster" or defName="Apparel_Burka"]/apparel/tags</xpath>
    <value>
      <li>BS_Jackets</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="Apparel_CrownStellic" or defName="Apparel_Crown" or defName="Apparel_Tailcap" or defName="Apparel_VisageMask"]/apparel[not(tags)]</xpath>
    <value>
      <tags/>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="Apparel_CrownStellic" or defName="Apparel_Crown" or defName="Apparel_Tailcap" or defName="Apparel_VisageMask"]/apparel/tags</xpath>
    <value>
      <li>BS_RoyalAndIdeologyHats</li>
    </value>
  </Operation>
</Patch>