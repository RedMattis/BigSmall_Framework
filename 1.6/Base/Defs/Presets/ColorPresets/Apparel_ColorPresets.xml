<Defs>
  <BigAndSmall.ColorSettingDef>
    <defName>BS_ApparelClr_Default</defName>
    <color>
      <apparelColorA>true</apparelColorA>
      <alts>
        <li>
          <triggers><li>IsRecolored</li></triggers>
          <apparelColorA>true</apparelColorA>
          <maxSaturation>0.8</maxSaturation>
          <maxBrightness>0.95</maxBrightness>
        </li>
        <li>
          <triggers><li>CustomColorAIsSet</li></triggers>
          <!--(1,1,1) is the default value. Won't actually be used since the trigger requires it to already be set.-->
          <customColorA>(1,1,1)</customColorA> 
        </li>
      </alts>
    </color>
  </BigAndSmall.ColorSettingDef>

  <BigAndSmall.ColorSettingDef>
    <defName>BS_ApparelClr_ColorableRNGFur</defName>
    <color>
      <randomLeatherColor>true</randomLeatherColor>
      <alts>
        <li>
          <triggers><li>CustomColorBIsSet</li></triggers>
          <customColorB>(1,1,1)</customColorB>
        </li>
        <li>
          <triggers><li>IsRecolored</li></triggers>
          <replacementDef>BS_ApparelClr_AnalogousFur</replacementDef>
        </li>
      </alts>
    </color>
  </BigAndSmall.ColorSettingDef>

  <BigAndSmall.ColorSettingDef>
    <defName>BS_ApparelClr_ComplimentaryFur</defName>
    <!--
      This is a subtle color setting that can be used to complement the main color of the apparel.
      It will usually generate a darker color, which makes it suitable colored furs and leathers.
    -->
    <color>
      <apparelColorA>true</apparelColorA>
      <brightnessFlat>-0.1</brightnessFlat>
      <saturation>0.95</saturation>
      <invertValueIfBelow>0.6</invertValueIfBelow>
      <maxSaturation>0.75</maxSaturation>
      <maxBrightness>0.9</maxBrightness>
    </color>
  </BigAndSmall.ColorSettingDef>

  <BigAndSmall.ColorSettingDef>
    <defName>BS_ApparelClr_AnalogousFur</defName>
    <!--
      This is a subtle color setting that can be used to complement the main color of the apparel.
      It will usually generate a darker color, which makes it suitable colored furs and leathers.
    -->
    <color>
      <apparelColorA>true</apparelColorA>
      <temperatureAnalogous>1</temperatureAnalogous>
      <!-- <temperatureComplementary>1</temperatureComplementary> -->
      <brightnessFlat>-0.1</brightnessFlat>
      <saturation>0.90</saturation>
      <invertValueIfBelow>0.65</invertValueIfBelow>
      <makeLightSaturationScale>0.5</makeLightSaturationScale>
      <maxSaturation>0.65</maxSaturation>
      <maxBrightness>0.95</maxBrightness>
      <minBrightness>0.3</minBrightness>
    </color>
  </BigAndSmall.ColorSettingDef>


</Defs>