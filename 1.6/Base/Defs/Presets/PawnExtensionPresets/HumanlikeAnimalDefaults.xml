<Defs>
  <!--
    Much of the functionality here was moved over into Hediffs_SapientAnimals.

    They can still be modified if you want to change things such as the default manipulation ability for the stages though.
  -->
  <BigAndSmall.PawnExtensionDef>
    <defName>BS_DefaultAnimal_NoHands</defName>
    <pawnExtension>
      <hideHumanlikeRenderNodes>true</hideHumanlikeRenderNodes>
      
      <apparelRestrictions>
        <noArmor>true</noArmor>
        <thingDefs>
          <allowlist><li>Apparel_ShieldBelt</li></allowlist>
        </thingDefs>
        <apparelLayers>
          <blacklist>
            <li>Shell</li>
            <li>Overhead</li>
          </blacklist>
        </apparelLayers>
        <bodyPartGroups>
          <blacklist>
            <li>FullHead</li>
          </blacklist>
        </bodyPartGroups>
      </apparelRestrictions>
    </pawnExtension>
  </BigAndSmall.PawnExtensionDef>

  <BigAndSmall.PawnExtensionDef>
    <defName>BS_DefaultAnimal_PoorHands</defName>
    <pawnExtension>
      <hideHumanlikeRenderNodes>true</hideHumanlikeRenderNodes>
      <apparelRestrictions>
        <noArmor>true</noArmor>
        <thingDefs>
          <allowlist><li>Apparel_ShieldBelt</li></allowlist>
        </thingDefs>
        <apparelLayers>
          <blacklist>
            <li>Shell</li>
            <li>Overhead</li>
          </blacklist>
        </apparelLayers>
        <bodyPartGroups>
          <blacklist>
            <li>FullHead</li>
          </blacklist>
        </bodyPartGroups>
      </apparelRestrictions>
    </pawnExtension>
  </BigAndSmall.PawnExtensionDef>

  <BigAndSmall.PawnExtensionDef>
    <defName>BS_DefaultAnimal</defName>
    <pawnExtension>
      <hideHumanlikeRenderNodes>true</hideHumanlikeRenderNodes>
      <canWieldThings>true</canWieldThings>
      <apparelRestrictions>
        <noArmor>true</noArmor>
        <thingDefs>
          <allowlist><li>Apparel_ShieldBelt</li></allowlist>
        </thingDefs>
        <apparelLayers>
          <blacklist>
            <li>Shell</li>
            <li>Overhead</li>
          </blacklist>
        </apparelLayers>
        <bodyPartGroups>
          <blacklist>
            <li>FullHead</li>
          </blacklist>
        </bodyPartGroups>
      </apparelRestrictions>
    </pawnExtension>
  </BigAndSmall.PawnExtensionDef>
</Defs>