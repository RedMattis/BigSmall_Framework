    <combatPower>60</combatPower>
    <apparelMoney>800~1200</apparelMoney>
    <weaponMoney>150~300</weaponMoney>
    <initialWillRange>2~3</initialWillRange>
    <techHediffsMoney>50~100</techHediffsMoney>

