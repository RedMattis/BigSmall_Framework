<Defs>
  <HediffGiverSetDef>
    <defName>BS_RobotHediffGiver</defName>
    <hediffGivers>
      <li Class="HediffGiver_Bleeding">
        <hediff>BS_RobotBloodloss</hediff>
      </li>
      <li Class="HediffGiver_Hypothermia">
        <hediff>BS_CryogenicInhibition</hediff>
      </li>
      <li Class="HediffGiver_Heat">
        <hediff>ThermalOverload</hediff>
      </li>
      <li Class="HediffGiver_Terrain" />
    </hediffGivers>
  </HediffGiverSetDef>

  <HediffDef>
    <defName>BS_CryogenicInhibition</defName>
    <label>cryogenic inhibition</label>
    <description>In extreme cold lubricants thicken, batteries drain, and equipment starts incurring errors.\n\nEventually the robot will enter a state of dormancy to prevent damage from which recovery is very slow.</description>
    <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
    <maxSeverity>2</maxSeverity>
    <alwaysShowSeverity>true</alwaysShowSeverity>
    <stages>
      <li>
        <label>minor</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.05</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.08</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.35</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.65</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.95</minSeverity>
        <hungerRateFactorOffset>-0.8</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>ThermalOverload</defName>
    <label>thermal overload</label>
    <description>High ambient temperatures prevent this unit from effectively dissipating heat. Processor are forced to clock-down to prevent rapid overheating.\n\nProlonged exposure will force emergency shutdown from which recovery is slow.</description>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <maxSeverity>2.0</maxSeverity>
    <alwaysShowSeverity>true</alwaysShowSeverity>
    <stages>
      <li>
        <label>minor</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.1</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.65</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.50</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.85</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.40</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.45</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>critical level</label>
        <minSeverity>0.90</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.05</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>BS_RobotBloodloss</defName>
    <label>liquid loss</label>
    <description>A reduction in the essential lubricants and fluids that keep the robot's systems functioning smoothly. This results in reduced mobility, and potential system failures, or an emergency shutdown if it reaches critical levels.</description>
    <maxSeverity>1.5</maxSeverity>
    <alwaysShowSeverity>true</alwaysShowSeverity>
    <stages>
      <li>
        <label>minor</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>0.10</minSeverity>
        <label>minor</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>moderate</label>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.45</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.80</minSeverity>
        <label>extreme</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.6</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.65</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <label>critical level</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>